<resources>
    <!-- Base application theme. -->
<!--    <style name="Theme.scoutBuilder" parent="Theme.AppCompat.DayNight.DarkActionBar">-->
    <style name="Theme.scoutBuilder" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <!-- AppCompat Switch coloring (Removing Holo colors) -->
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorSwitchThumbNormal">@color/colorLightGray</item>
    </style>
</resources>